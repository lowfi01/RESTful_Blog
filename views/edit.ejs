<% include ./partials/header  %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blogs[title]" value="<%= blog.title %>"/>
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blogs[image]"value="<%= blog.image %>"/>
    </div>
    <div class="field">
      <label>Blog Content</>
      <textarea name="blogs[body]" rows="8" cols="20"><%= blog.body %></textarea>
    </div>
    <input class="ui violet big inverted button" type="submit" value="submit" />
  </form>
</div>


<% include ./partials/footer  %>